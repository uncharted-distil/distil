{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "lib": ["es2019", "dom"]
  },
  "include": ["./public/**/*"],
  "exclude": ["./public/static/**/*", ".public/.*/", ".public/styles/"]
}
