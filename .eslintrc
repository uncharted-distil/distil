{
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/recommended",
    "@vue/typescript/recommended",
    "prettier"
  ], // the vue recommended will suggest proper coding for the templates
  "rules": {
    // add rules here
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-use-before-define": "off",
    "vue/max-attributes-per-line": "off",
    "vue/singleline-html-element-content-newline": "off"
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser", // essential for parsing the typescript
    "sourceType": "module",
    "ecmaVersion": 6
  }
}
